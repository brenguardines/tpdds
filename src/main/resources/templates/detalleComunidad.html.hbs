{{# partial "contenido" }}
<head>
    <link rel="stylesheet" type="text/css" href="/detalleComunidad.css">
    <link rel="stylesheet" type="text/css" href="/layout.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

    <h1>Detalle de comunidad: {{nombreComunidad}}</h1>

            <div class="card">
                <scroll-container>
                    {{#each miembros}}
                             <div class="comunidad-container">
                                ID: {{id}}, Nombre: {{nombre}}, Email:{{email}}
                                <form method="post" action="/eliminarMiembroComunidad">
                                <input type="hidden" name="valor" value="{{id}}">
                                <input type="hidden" name="idComunidad"  value="{{idComunidad}}">
                                <button type="submit">Eliminar</button>
                             </form>
                            </div>
                      {{/each}}

                </scroll-container>
            </div>

            <a href="#popup1" class="Agregar Miembro">Nuevo Miembro</a>

                <div id="popup1" class="popup-container">
                       <form action="/agregarMiembroComunidad?comunidad={{idComunidad}}" method="post">
                           <label for="serceccionarUsuario">Selecciona un miembro:</label>

                           <select id="usuariosSelect" name="miembro">
                                {{#each miembrosCandidatos}}
                                   <option value="{{id}}"> Nombre: {{nombre}}, Email:{{email}}</option>
                                {{/each}}

                           </select>

                           <button type="submit">Agregar</button>
                       </form>
                    <a href="#" class="cerrar-popup">Cerrar</a>
                </div>

            <div class="card">
                <scroll-container>
                    {{#each servicios}}
                             <div class="comunidad-container">
                                ID: {{id}}, Nombre: {{nombre}}, Descripcion:{{descripcion}}
                                <form method="post" action="/eliminarServicioComunidad">
                                <input type="hidden" name="valor" value="{{id}}">
                                <input type="hidden" name="idComunidad"  value="{{idComunidad}}">
                                <button type="submit">Eliminar</button>
                             </form>
                            </div>
                      {{/each}}

                </scroll-container>
            </div>
                <a href="#popup2" class="Agregar Servicio">Nuevo servicio</a>

                <div id="popup2" class="popup-container">
                       <form action="/agregarServicioComunidad?comunidad={{idComunidad}}" method="post">
                               <label for="selecionarServicio">Selecciona un servicio:</label>

                               <select id="servicioSelect" name="servicio">
                                    {{#each serviciosNuevos}}
                                       <option value="{{id}}"> Nombre: {{nombre}}, Descripcion:{{descripcion}}</option>
                                    {{/each}}

                               </select>

                               <button type="submit">Agregar</button>
                           </form>
                    <a href="#" class="cerrar-popup">Cerrar</a>
                </div>
</body>
{{/partial}}

{{> layout.html.hbs }}