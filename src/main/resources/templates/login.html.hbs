<html>
<head>
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" type="text/css" href="/login.css">
    <link rel="stylesheet" type="text/css" href="/general.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <h1 class="titulosPantallasSinLayout">Iniciar Sesión</h1>
    <form action="/" method="POST">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="correo" name="correo" placeholder="Correo Electrónico" required>
            <label for="correo">Correo Electrónico*</label>
        </div>

        <div class="form-floating" style="display: flex">
            <input type="password" class="form-control" id="contrasenia" name="contrasenia" placeholder="Contraseña" required content="botonOjo">
            <label for="contrasenia">Contraseña*</label>
            <span class="ojoVerContrasenia" onclick="mostrarContrasena()">
                <svg id="svgOjoCerrado" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash-fill" viewBox="0 0 16 16"  style="visibility: visible">
                    <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588M5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z"/>
                    <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.83-2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12z"/>
                </svg>
                <svg id="svgOjoAbierto" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16" style="visibility: hidden; margin-left: -16px">
                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                </svg>
            </span>
        </div>

        <div id="botonIniciarSesion" class="form-floating">
            <input class="botonPrincipal" type="submit" value="Iniciar Sesion">
        </div>

        <div id="registrarse">¿No tenés una cuenta?  <span><a href="/registro"> Registrate acá</a></span></div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        function mostrarContrasena(){
            var tipo = document.getElementById("contrasenia");
            var ojoCerrado = document.querySelector("#svgOjoCerrado");
            var ojoAbierto = document.querySelector("#svgOjoabierto");

            if(tipo.type == "password"){
                ojoCerrado.style.visibility="hidden"
                ojoAbierto.style.visibility="visible";
                tipo.type = "text";
            }else{
                ojoAbierto.style.visibility="hidden";
                ojoCerrado.style.visibility="visible";
                tipo.type = "password";
            }
        }
    </script>
</body>
</html>