{{# partial "contenido" }}
<head>
    <title> Abrir incidente </title>
    <link rel="stylesheet" type="text/css" href="/general.css">
    <link rel="stylesheet" type="text/css" href="/aperturaIncidente.css">
    <link rel="stylesheet" type="text/css" href="/layout.css">
    <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>

<form action="/crearIncidente" method="POST">
    <div class="form-floating">
        <label class="labelDropdown" for="establecimiento">Establecimiento</label>
        <select name="establecimiento" id="establecimiento" class="buscador" onchange="location.href=this.value">
            {{#each establecimientos}}
                <option  value="/aperturaIncidentes?establecimiento={{id}}">
                    {{nombre}}
                </option>
            {{/each}}
        </select>
        <input type="hidden" name="establecimiento" id="establecimientoHidden" value="{{establecimiento}}">
    </div>


    <div class="form-floating">
            <label class="labelDropdown" for="servicio">Servicio</label>
            <select name="servicio" id="servicio" class="buscador" >
                <option value="todos">Servicios</option>
                 {{#each servicios}}
                    <option value="{{id}}">{{nombre}}</option>
                 {{/each}}
            </select>
    </div>

    <div class="form-floating">
        <input type="text" class="form-control" name="observacion" id="observacion" placeholder="Observacion" required>
        <label for="observacion">Observacion</label>
    </div>

    <div class="row" id="botonCrear">
            <a href="/listadoIncidentes" class="botonPrincipal"> Crear</a>
    </div>
    </form>
</body>

<script>
    function buscarServicios(id){
        return location.href='/aperturaIncidentes?establecimiento=' + "id" ;
    }


</script>

