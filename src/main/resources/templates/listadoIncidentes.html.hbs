{{# partial "contenido" }}
<head>
    <link rel="stylesheet" type="text/css" href="/listadoIncidentes.css">
    <link rel="stylesheet" type="text/css" href="/general.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <section class="form-floating">
        <label class="labelDropdown" for="estado">Estado</label>
        <select name="estado" id="estado" class="buscador" >
            <option selected value="activos" onselect="location.href='/listadoIncidentes?estado=activos'">Activos</option>
            <option value="cerrados" onselect="location.href='/listadoIncidentes?estado=cerrados'">Cerrados</option>
            <option value="todos" onselect="location.href='/listadoIncidentes?estado=todos'">Todos</option>
        </select>
    </section>

    <section id="contenerdorIncidente">
        <div class="fondoContenedor">
            {{#each incidentes}}
                <div class="contenedorFila">
                <span>
                    <ul> Titulo:  {{observacion}}</ul>
                    <ul> Establecimiento:  {{establecimiento.nombre}}</ul>
                    <ul> Servicio: {{servicio.nombre}}</ul>
                    <ul >Fecha creacion: {{apertura}}</ul>
                    <ul> Fecha cierre: {{cierre}}</ul>
                </span>
                    <span class="contenedorBotonCerrar">
                    <input class="botonCerrar" type="submit" value="Cerrar">
                </span>
                </div>
                <div class="lineaDivisoria"></div>
            {{/each}}
        </div>
        <div class="botonAgregar">
            <a href='/aperturaIncidentes'>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                    <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0"/>
                </svg>
            </a>
        </div>
    </section>

    <section id="botonVerRanking">
        <a href="/rankingIncidentes" class="botonPrincipal"> Ver Rankings</a>
    </section>
</body>
{{/partial}}

<script>
    function convertirFecha(fecha){
        return fecha.toLocaleString();
    }
</script>

{{> layout.html.hbs }}